<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space140"
        android:layout_margin="@dimen/space4"
        app:cardCornerRadius="@dimen/space4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_service_image"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/space110"
                android:layout_height="@dimen/space110"
                android:src="@drawable/screen_bg"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/black"
        android:layout_below="@id/cardView"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_5"/>

</RelativeLayout>