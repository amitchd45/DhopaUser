<resources>

    <style name="Widget.Theme.Dhopa.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Widget.Theme.Dhopa.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="textMedium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text14</item>

    </style>

    <style name="textSmall" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text12</item>

    </style>

    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text16</item>

    </style>
</resources>